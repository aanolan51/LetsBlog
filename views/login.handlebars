{{!-- Create the form to login: --}}

<h3 class = "ml-5">LOGIN:</h3>
<form class = "col-3 ml-4 login">
  <div class="form-group">
    <label for="usernameLogin">username:</label>
    <input class="form-input" type="text" id="usernameLogin" />
  </div>
  <div class="form-group">
    <label for="passwordLogin">password:</label>
    <input class="form-input" type="password" id="passwordLogin" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">LOGIN</button>
  </div>
</form>

{{!-- Bring in the login javascript file to pull the form data to send to the back-end: --}}
<script src="/js/login.js"></script>