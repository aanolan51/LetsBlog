{{!-- Create the form to sign-up: --}}

<h3 class = "ml-5">CREATE YOUR ACCOUNT:</h3>
<form class = "col-3 ml-4 signup">
  <div class="form-group">
    <label for="usernameInput">username:</label>
    <input class="form-input" type="text" id="usernameInput" />
  </div>
  <div class="form-group">
    <label for="emailInput">email:</label>
    <input class="form-input" type="text" id="emailInput" />
  </div>
  <div class="form-group">
    <label for="passwordInput">password:</label>
    <input class="form-input" type="password" id="passwordInput" />
  </div>
  <div class="form-group">
    <button class="btn btn-danger" type="submit">SIGN-UP</button>
  </div>
</form>

{{!-- Bring in the sign-up javascript file to pull the form data to send to the back-end: --}}
<script src="/js/signup.js"></script>