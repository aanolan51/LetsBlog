{{!-- The || array in the each statement cannot be the same as the column name being called from the model --}}
{{#each comments as |comments|}}

<div class="card m-4">
  <div class="card-body">

    <h5 class="card-title">{{user.username}}</h5>
    <h6 class = "card-subtitle mb-2 text-muted">{{createdAt}}</h6>
    <p class="card-text">{{comment}}</p>
  </div>
</div>

{{/each}}